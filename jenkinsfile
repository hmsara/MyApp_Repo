pipeline{
agent any

environment {
       
        DOCKER_TLS_VERIFY = '0' 
        DockerImage=''
        registry='hmsara/backimage'
        //DOCKER_IMAGE = "hmsara/back_image:${BUILD_NUMBER}"
        DOCKER_REGISTRY = 'https://hub.docker.com/repositories'
        DOCKER_PASSWORD = credentials('DOCKER_PASSWORD')
    }
stages{
    
    stage('checkout scm'){
        steps{
            script{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/hmsara/MyApp_Repo']])}}}

     stage('Build Backend') {

            steps {
                script {
                    env.DOCKER_TLS_VERIFY = DOCKER_TLS_VERIFY
                    DockerImage=docker.build (registry)
                }
            }
        }

    stage('Push to Docker Registry') {
            steps {
                script {
                  withCredentials([string(credentialsId: 'DOCKER_PASSWORD', variable: 'DOCKER_PASSWORD')]){
                      sh "docker login -u _ -p ${DOCKER_PASSWORD} ${DOCKER_REGISTRY}"
                      withDockerRegistry(url: "${DOCKER_REGISTRY}") {
                         sh "docker push ${DOCKER_REGISTRY}/${registry}"
                }
            }
                    //def dockerImage = docker.image("${DOCKER_IMAGE}")
                   // withCredentials([string(credentialsId: 'DOCKER_PASSWORD', variable: 'DOCKER_PASSWORD')]){
                    //sh "docker login -u _ -p ${DOCKER_PASSWORD} ${DOCKER_REGISTRY}"
                    //docker.withRegistry('https://hub.docker.com/repositories/hmsara', "DOCKER_PASSWORD") 
                    // registry.push()
                    // withDockerRegistry(url: 'https://hub.docker.com/repositories/hmsara') { 
                         //   sh "docker push ${DOCKER_REGISTRY}/${registry}"
                  //  }
               // }
            }
        }
     

}
}
}
