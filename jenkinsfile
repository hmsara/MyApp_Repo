pipeline{
agent any

environment {
       
        DOCKER_TLS_VERIFY = '0' 
        DockerImage=''
        registry='hmsara/backimage'
        DOCKER_IMAGE = "hmsara/back_image:${BUILD_NUMBER}"
        DOCKER_PASSWORD = credentials('DOCKER_PASSWORD')
    }
stages{
    
    stage('checkout scm'){
        steps{
            script{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/hmsara/MyApp_Repo']])}}}

     stage('Build Backend') {

            steps {
                script {
                    env.DOCKER_TLS_VERIFY = DOCKER_TLS_VERIFY
                    DockerImage=docker.build (registry)
                }
            }
        }

    stage('Push to Docker Registry') {
            steps {
                script {
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry('https://hub.docker.com/repositories/hmsara', "DOCKER_PASSWORD") {
                        dockerImage.push()
                    }
                }
            }
        }
     

}
}
