pipeline{
agent any

environment {
       
        DOCKER_TLS_VERIFY = '0' 
        DockerImage=''
        registry='hmsara/frontimage'
    }
stages{
     stage('Install Docker CLI') {
            steps {
                script {
                    sh ' sudo apt-get update && sudo apt-get install -y apt-transport-https ca-certificates curl gnupg-agent software-properties-common'
                    sh 'curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -'
                    sh 'add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable"'
                    sh 'sudo apt-get update && apt-get install -y docker-ce-cli'
                }
            }
        }
    
    stage('checkout scm'){
        steps{
            script{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/hmsara/MyApp_Repo']])}}}

     stage('Build Frontend') {

            steps {
                script {
                    env.DOCKER_TLS_VERIFY = DOCKER_TLS_VERIFY
                    DockerImage=docker.build (registry)
                }
            }
        }


     

}
}
